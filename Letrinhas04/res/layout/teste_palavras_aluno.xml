<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testPalavras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30sp"
    android:paddingRight="30sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.letrinhas04.Teste_Palavras_Aluno" >

    <ScrollView
        android:id="@+id/txtTela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="21dp"
        android:background="#ccccff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
        	android:id="@+id/tvTexto"
        	android:layout_width="240dp"
            android:layout_height="1221dp"
           	android:orientation="vertical"
            android:textSize="32sp"
            android:textStyle="normal"/>

    </ScrollView>
     <ScrollView
        android:id="@+id/txtTela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/txtTela"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/txtTela"
        android:background="#ccccff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tvTexto1"
            android:layout_width="240dp"
            android:layout_height="1221dp"
            android:orientation="vertical"
            android:textSize="32sp"
            android:textStyle="normal" />

    </ScrollView>
     <ScrollView
        android:id="@+id/txtTela2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/txtTela1"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/txtTela1"
        android:background="#ccccff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
          	android:id="@+id/tvTexto2"
          	android:layout_width="240dp"
            android:layout_height="1221dp"
            android:orientation="vertical"
          	android:textSize="32sp"
          	android:textStyle="normal" />
    </ScrollView>
     
    <ImageButton
        android:id="@+id/txtRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/Recording"
        android:src="@drawable/record" />

    <ImageButton
        android:id="@+id/txtPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtRecord"
        android:layout_below="@+id/txtRecord"
        android:layout_marginTop="34dp"
        android:contentDescription="@string/play"
        android:src="@drawable/palyoff" />

    <ImageButton
        android:id="@+id/txtCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAvaliar"
        android:layout_alignLeft="@+id/txtAvaliar"
        android:layout_marginBottom="14dp"
        android:contentDescription="@string/sair"
        android:src="@drawable/cancelar" />

    <ImageButton
        android:id="@+id/txtAvaliar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTela2"
        android:layout_alignLeft="@+id/txtVoltar"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/entrar"
        android:src="@drawable/valido" />

    <ImageButton
        android:id="@+id/txtVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCancel"
        android:layout_alignRight="@+id/txtPlay"
        android:layout_marginBottom="84dp"
        android:contentDescription="@string/voltar"
        android:src="@drawable/voltar" />

    <ImageButton
        android:id="@+id/voicePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPlay"
        android:layout_below="@+id/txtPlay"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/play"
        android:src="@drawable/palyoff" />

</RelativeLayout>