<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/escProfessor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:configChanges="orientation|keyboardHidden|screenSize"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="40sp"
    android:paddingRight="40sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.letrinhas04.EscolheEscola" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/letrinhas"
        android:src="@drawable/letrinhas" />

    <TextView
        android:id="@+id/escTRodape_escl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/escTVoltar_escl"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/escTVoltar_escl"
        android:text="@string/letrinhas"
        android:textColor="#5ddfff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/svEscolher_escl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escTRodape_escl"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/esTCabecalho_escl"
        android:layout_toRightOf="@+id/escTVoltar_escl"
        android:background="#0099cc"
        android:contentDescription="@string/escola" >

        <TableLayout
            android:id="@+id/tblEscolhe_escola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/escesclinha01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/Button04"
                    style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/escola"
                    android:text="Escola Básica e Secundária Artur Gonçalves de Torres Novas"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/Button03"
                     style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="20sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/escola"
                    android:text="Escola E.B 2,3 Dr.Antonio Chora Barroso"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/Button02"
                     style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/escola"
                    android:text="Centro escolar da Meia Via"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/Button01"
                     style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/escola"
                    android:text="Centro escolar dos Riachos"
                    android:textSize="25sp" />

            </TableRow>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/Button09"
                     style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/escola"
                    android:text="Escola E.B. de Stª Maria"
                    android:textSize="25sp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <TextView
        android:id="@+id/esTCabecalho_escl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="@string/title_activity_escolhe_escola"
        android:textColor="#5ddfff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/escTVoltar_escl"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/voltar"
        android:onClick="voltar"
        android:src="@drawable/voltar" />

</RelativeLayout>