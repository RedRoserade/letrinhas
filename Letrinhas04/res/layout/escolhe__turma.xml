<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/escTurma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:configChanges="orientation|keyboardHidden|screenSize"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="40sp"
    android:paddingRight="40sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.letrinhas04.Escolhe_Turma" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/letrinhas"
        android:src="@drawable/letrinhas" />

    <TextView
        android:id="@+id/Rodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnVoltar"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/btnVoltar"
        android:text="@string/letrinhas"
        android:textColor="#5ddfff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/svEscolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Rodape"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/logo"
        android:layout_toRightOf="@+id/btnVoltar"
        android:background="#0099cc"
        android:contentDescription="@string/escola" >

        <TableLayout
            android:id="@+id/tblEscolhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/linha01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btPlay"
                    style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/turma"
                    android:text="Turma 1ยบ C"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btSubmeter"
                    style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/turma"
                    android:text="Turma 1ยบ A"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/Button04"
                    style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/turma"
                    android:text="Turma 3ยบ B"
                    android:textSize="25sp" />

            </TableRow>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btRecord"
                    style="@style/ButtonBarButton"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginRight="30sp"
                    android:background="#0099cc"
                    android:drawableTop="@drawable/turma"
                    android:text="Turma 3ยบ B"
                    android:textSize="25sp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/voltar"
        android:drawableTop="@drawable/voltar"
        android:onClick="voltar"
        android:text="@string/voltar" />

    <TextView
        android:id="@+id/Cabecalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:text="@string/escolherTurma"
        android:textColor="#5ddfff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Escola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Cabecalho"
        android:layout_below="@+id/Cabecalho"
        android:text="Escola escolhida"
        android:textSize="30sp" />

    <ImageView
        android:contentDescription="@string/professor"
        android:id="@+id/ivProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/svEscolher"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/professora" />

    <TextView
        android:id="@+id/tvProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfessor"
        android:layout_toLeftOf="@+id/ivProfessor"
        android:text="Professor escolhido"
        android:textSize="30sp" />

</RelativeLayout>