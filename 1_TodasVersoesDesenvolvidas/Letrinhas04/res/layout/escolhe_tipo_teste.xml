<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/escDisciplina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#689800"
                android:gravity="clip_vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:screenOrientation="landscape"
                tools:context="com.letrinhas04.escolhe.EscolheDisciplina" >

    <Button
            android:id="@+id/btnDVoltar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/voltar"
            android:drawableTop="@drawable/voltar"
            android:scaleType="fitCenter"
            android:text="@string/voltar" />

    <Button
            android:id="@+id/estMeio"
            android:layout_width="300sp"
            android:layout_height="220sp"
            android:drawableTop="@drawable/imags"
            android:scaleType="fitCenter"
            android:text="Interpretação através de Imagens"
            android:textColor="#0000aa"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/btnLeituraTest" android:layout_alignLeft="@+id/escTipoTProfname"/>

    <Button
            android:id="@+id/btnLeituraTest"
            android:layout_width="300sp"
            android:layout_height="220sp"
            android:drawableTop="@drawable/textos"
            android:scaleType="fitCenter"
            android:text="Leitura de Textos"
            android:textColor="#0000aa"
            android:textSize="30sp"
            android:textStyle="bold" android:layout_alignTop="@+id/btnTestePalav" android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/btnTestePalav"
            android:layout_width="300sp"
            android:layout_height="220sp"
            android:layout_below="@+id/escTipoTEscola"
            android:layout_marginTop="150sp"
            android:drawableTop="@drawable/palavras"
            android:scaleType="fitCenter"
            android:text="Leitura de Palavras"
            android:textColor="#0000aa"
            android:textSize="35sp"
            android:textStyle="bold" android:layout_alignLeft="@+id/escTipoTEscola"/>

    <ImageView
            android:id="@+id/escDlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/letrinhas" />

    <TextView
            android:id="@+id/escDCabecalho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/escDlogo"
            android:layout_toRightOf="@+id/escDlogo"
            android:text="@string/escolheTipoTeste"
            android:textColor="#5ddfff"
            android:textSize="50sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/escTipoTEscola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/escDCabecalho"
            android:layout_below="@+id/escDCabecalho"
            android:text="Escola escolhida"
            android:textSize="30sp"/>

    <ImageView
            android:id="@+id/escTipoTImgProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/professor"
            android:src="@drawable/professora"/>

    <ImageView
            android:id="@+id/ivDAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/aluno"
            android:src="@drawable/boy1"/>

    <TextView
            android:id="@+id/escTipoTProfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/escTipoTImgProf"
            android:layout_toLeftOf="@+id/escTipoTImgProf"
            android:text="Professor escolhido"
            android:textSize="30sp" android:layout_marginRight="20dp"/>

    <TextView
            android:id="@+id/escTipoTAluni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/escTipoTTurma"
            android:layout_alignBottom="@+id/escTipoTTurma"
            android:layout_toLeftOf="@+id/escTipoTImgProf"
            android:text="Aluno Escolhido"
            android:textSize="25sp" />

    <TextView
            android:id="@+id/escTipoTTurma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30sp"
            android:layout_toLeftOf="@+id/escTipoTAluni"
            android:text="Turma Escolhida"
            android:textSize="25sp" />

    <TextView
            android:id="@+id/escDRodape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btnDVoltar"
            android:text="@string/letrinhas"
            android:textColor="#5ddfff"
            android:textSize="30sp"
            android:textStyle="bold" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione o Tipo de Teste:"
            android:id="@+id/textView"
            android:textIsSelectable="false" android:textSize="27sp" android:layout_below="@+id/escTipoTProfname"
            android:layout_alignLeft="@+id/btnTestePalav" android:layout_marginTop="50dp"/>

</RelativeLayout>
