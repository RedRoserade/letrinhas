<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/escTeste"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:configChanges="orientation|keyboardHidden|screenSize"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="40sp"
    android:paddingRight="40sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.letrinhas05.EscolheTeste$PlaceholderFragment" >

    <TextView
        android:id="@+id/esTCabecalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/logo2"
        android:text="@string/title_activity_escolhe_teste"
        android:textColor="#5ddfff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ibComecar"
        android:layout_width="140sp"
        android:layout_height="100sp"
        android:clickable="true"
        android:contentDescription="@string/start"
        android:onClick="executarTestes"
        android:src="@drawable/right" android:layout_alignParentRight="true" android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false" android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/escTRodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/escTVoltar"
        android:layout_toRightOf="@+id/escTVoltar"
        android:layout_marginLeft="10sp"
        android:text="@string/letrinhas"
        android:textColor="#5ddfff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/svEscolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/esTCabecalho"
        android:layout_below="@+id/esTLogo"
        android:layout_marginLeft="40dp"
        android:background="@color/black_overlay" android:layout_above="@+id/escTVoltar"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:id="@+id/llescteste"
            android:layout_width="match_parent"
            android:layout_height="457dp"
            android:orientation="vertical" android:weightSum="1">

            <ToggleButton
                android:id="@+id/ToggleButton1"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginTop="5sp"
                android:text="@string/teste"
                android:textOff="@string/teste"
                android:textOn="@string/teste"
                android:textSize="32sp"
                android:textStyle="normal" android:layout_weight="91.70"/>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/esTLogo"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/teste"
        android:src="@drawable/index" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>

    <ImageButton
        android:id="@+id/escTVoltar"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:contentDescription="@string/voltar"
        android:onClick="voltar"
        android:src="@drawable/voltar" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>

</RelativeLayout>